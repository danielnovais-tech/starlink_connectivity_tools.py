{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python C++ Debugger",
            "type": "pythoncpp",
            "request": "launch",
            "pythonLaunchName": "Python: Current File",
            "cppAttachName": "'(Windows) Attach' or '(gdb) Attach'"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Starlink CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "cli.starlink_cli",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": true
        },
        {
            "name": "Python: Starlink Monitor",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/starlink_monitor.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Run Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Basic Status Example",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/basic_status.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Remote Access",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/remote_access_example.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}